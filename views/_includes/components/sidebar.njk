<h1 class="☠-sidebar__title">
    <a class="☠-sidebar__button" href="{{ '/' | url }}">{{ site.title }}</a>
</h1>
<ul class="☠-sidebar__list--level-0">
    {%- for collectionPage in collections.all | eleventyNavigation %}
    <li class="☠-sidebar__item--level-0">
        {%- if collectionPage.url %}
        <a class="☠-sidebar__button" href="{{ collectionPage.url | url }}"{% if page.url == collectionPage.url %} aria-current="page"{% endif %}>{{ collectionPage.key }}</a>
        {%- else %}
        <span class="☠-sidebar__button">{{ collectionPage.key }}</span>
        {%- endif %}
        {%- if collectionPage.children %}
        <ul class="☠-sidebar__list--level-1">
            {%- for childCollectionPage in collectionPage.children %}
            <li class="☠-sidebar__item--level-1">
                <a class="☠-sidebar__button" href="{{ childCollectionPage.url | url }}"{% if page.url == childCollectionPage.url %} aria-current="page"{% endif %}>{{ childCollectionPage.key }}</a>
            </li>
            {%- endfor %}
        </ul>
        {%- endif %}
    </li>
    {%- endfor %}
</ul>